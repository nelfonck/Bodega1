<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e2e2e2"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvCodProveedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cod proveedor"/>

            <TextView
                android:id="@+id/tvRazonSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCodProveedor"
                android:text="Razon social"/>

            <TextView
                android:id="@+id/tvRazonComercial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRazonSocial"
                android:text="Razon comercial"/>

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Fecha"/>

            <TextView
                android:id="@+id/tvTotalIva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tvRazonComercial"
                android:textStyle="bold"
                android:text="Total iva"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>