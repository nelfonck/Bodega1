<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Articulo"/>


        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvArticulo"
            android:padding="5sp"
            android:text="Precio"/>

        <TextView
            android:id="@+id/tvIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvArticulo"
            android:padding="5sp"
            android:layout_toStartOf="@id/tvCantidad"
            android:layout_toLeftOf="@id/tvCantidad"
            android:layout_marginRight="10dp"
            android:text="0" />

        <TextView
            android:id="@+id/tvCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvArticulo"
            android:layout_toStartOf="@id/tvTotal"
            android:layout_marginRight="20dp"
            android:text="Cantidad"
            android:layout_toRightOf="@+id/tvPrecio"
            android:padding="5sp"
            android:layout_toLeftOf="@id/tvTotal" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvArticulo"
            android:layout_alignParentEnd="true"
            android:padding="5sp"
            android:text="Total"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

