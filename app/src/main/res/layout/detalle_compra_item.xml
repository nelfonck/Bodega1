<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:background="#e2e2e2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
             >

                <TextView
                    android:id="@+id/tvCodArticulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cod Art:"/>

                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCodArticulo"
                    android:textStyle="bold"
                    android:text="Descripcion"/>

                <TextView
                    android:id="@+id/tvCantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cant:"
                    android:layout_below="@id/tvDescripcion"/>

                <TextView
                    android:id="@+id/tvCosto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDescripcion"
                    android:layout_toEndOf="@id/tvCantidad"
                    android:layout_marginStart="20dp"
                    android:text="Costo:"/>

                <TextView
                    android:id="@+id/tvSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDescripcion"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text="Subtotal:"/>

                <TextView
                    android:id="@+id/tvPorcDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCantidad"
                    android:text="%Des: "/>

                <TextView
                    android:id="@+id/tvPorIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCantidad"
                    android:layout_toEndOf="@id/tvPorcDes"
                    android:layout_marginStart="20dp"
                    android:text="%IV: "/>

                <TextView
                    android:id="@+id/tvTotalIvi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSubTotal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text="Total IVI:"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



</LinearLayout>